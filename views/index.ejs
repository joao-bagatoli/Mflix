<body class="bg-black text-white">
  <div class="relative h-screen flex items-center justify-center">
    <img alt="Imagem de fundo com cenas de filmes e séries"
      class="absolute inset-0 object-cover" height="1080"
      src="images/BackgroundLogin.jpg"
      width="1920" />
    <!--<div class="absolute inset-0 bg-black opacity-60">
    </div> -->
    <div class="relative z-10 w-full max-w-md mx-auto p-8 bg-black bg-opacity-75 rounded">
      <h1 class="text-3xl font-bold mb-6">
        Entrar
      </h1>
      <form action="/login" class="space-y-6" method="POST">
        <div>
          <label class="block text-sm font-medium" for="email">
            Email
          </label>
          <input
            class="w-full p-3 rounded bg-gray-700 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-red-500"
            id="email" name="email" required="" type="email" />
        </div>
        <div>
          <label class="block text-sm font-medium" for="senha">
            Senha
          </label>
          <input
            class="w-full p-3 rounded bg-gray-700 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-red-500"
            id="senha" name="senha" required="" type="password" />
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input class="h-4 w-4 text-red-500 focus:ring-red-500 border-gray-300 rounded" id="lembrar" name="lembrar"
              type="checkbox" />
            <label class="ml-2 block text-sm" for="lembrar">
              Lembre-se de mim
            </label>
          </div>
          <a class="text-sm text-gray-400 hover:underline" href="#">
            Precisa de ajuda?
          </a>
        </div>
        <button class="w-full py-3 bg-red-600 hover:bg-red-700 rounded text-white font-bold" type="submit">
          Entrar
        </button>
      </form>
