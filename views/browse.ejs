    <script>
        function setupCarousel(carouselId) {
            const carousel = document.querySelector(`#${carouselId}`);
            const prevBtn = carousel.parentElement.querySelector('.carousel-prev');
            const nextBtn = carousel.parentElement.querySelector('.carousel-next');
            const itemWidth = carousel.querySelector('.carousel-item').offsetWidth + 16; // Largura do item + margem
    
            prevBtn.addEventListener('click', () => {
                carousel.scrollBy({ left: -itemWidth * 3, behavior: 'smooth' }); // Move 3 itens para trás
            });
    
            nextBtn.addEventListener('click', () => {
                carousel.scrollBy({ left: itemWidth * 3, behavior: 'smooth' }); // Move 3 itens para frente
            });
        }
    
        // Configura os carrosséis
        setupCarousel('popular-carousel');
        setupCarousel('trending-carousel');
        setupCarousel('recommendations-carousel');
    </script>
